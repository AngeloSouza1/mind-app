<% if content.errors.any? %>
  Errors:  <%= content.errors.full_messages.join(', ') %>
  <br>
  <br>
<% end %>

<%= form_with(model: content, local:true) do |form| %>
    <div class'field'>
        <%= form.label :title %>        
        <%= form.text_field :title%>
    </div>
    <p>
    <div class'field'>
        <%= form.label :description %>        
        <%= form.text_area :description%>
    </div>
      <p>
    <div class='actions'>
        <%= form.submit 'Create Content' %>
    </div>
<% end %>

