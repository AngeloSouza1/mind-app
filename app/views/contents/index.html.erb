<%= link_to 'New content', new_content_path %>
<h1>Contents</h1>

<%= form_tag(contents_path, method: :get) do %>
  <div class='field'>
    <%= label_tag :tags %>
    <%= select_tag 'tags[]', options_for_select(current_user.tags.pluck(:name), params[:tags]), class: "select2", multiple: "multiple", style: "width: 50%;", "data-select2-tags" => "true"  %>
  </div>
  <p>
  <div class='actions'>
    <%= submit_tag('Search') %>
  </div>
<% end %>
<br>
<% @contents.each do |content| %>
  <br>
   <strong>Title:</strong> <%= content.title %>
   <strong>Description:</strong> <%= content.description %>
   <strong>Tags:</strong> <%= content.tags.pluck(:name).join(', ') %>
   <br>
   <%= link_to 'Show', content_path(content) %>
   <%= link_to 'Edit', edit_content_path(content) %>   
   <%= button_to 'Delete', content_path(content), method: :delete, data: { confirm: 'Are you sure?' } %>
  
<% end %>

